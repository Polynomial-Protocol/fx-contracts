# Template .env file for trusted signer oracle deployment
# Copy this to .env and fill in your values
# IMPORTANT: Never commit your .env file with secrets to git!

# Network configuration
RPC_URL=https://rpc.sepolia.polynomial.fi
CHAIN_ID=80008

# Deployment account (needs ETH for gas)
DEPLOYER_PRIVATE_KEY=

# Trusted signer configuration
SIGNER_PRIVATE_KEY=

# Oracle Manager address on Polynomial Sepolia
ORACLE_MANAGER_ADDRESS=

# After deployment, add these values:
TRUSTED_SIGNER_REGISTRY_ADDRESS=
TRUSTED_SIGNER_NODE_ADDRESS=

# Asset configurations (for price feeds)
# Add as many assets as needed with their identifiers
ASSET_IDS=ETH,BTC,POLYNOMIAL

# Binance Funding Rate configuration (if using)
BINANCE_FUNDING_RATE_SYMBOL=BTCUSDT
BINANCE_FUNDING_RATE_UPDATE_INTERVAL=3600000  # 1 hour in milliseconds

# Gas settings (optional, adjust if needed)
GAS_PRICE=
GAS_LIMIT= 